<% @posts.each do |post| %>
  <p><%= post.message %><br>
  User ID: <%= post.user_id %><br>
  <%= post.created_at.strftime("%m/%d/%Y, %H:%M") %>

  <%= link_to 'Edit', edit_post_path(post) %>

  <%= link_to 'Destroy', post, :method => :delete %>

  </p>
<% end %>

<%= link_to new_post_path do %>
  New post
<% end %>
